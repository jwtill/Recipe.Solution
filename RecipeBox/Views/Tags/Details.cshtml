@{
  Layout = "_Layout";
}
@model RecipeBox.Models.Tag;

<h2>Tag Details</h2>
<div class="main">
  <h3>@Html.DisplayNameFor(m => m.Name): @Html.DisplayFor(m => m.Name)</h3>

  @if(@Model.JoinEntities.Count == 0)
  {
    <p>This tag does not include any recipes</p>
  }
  else 
  {
    <h4>Recipe this tag contains</h4>
    <ul>
      @foreach(var join in Model.JoinEntities)
      {
        <li>@Html.ActionLink($"{join.Recipe.Name}", "Details", "Recipes", new { id = join.Recipe.RecipeId})</li>
      }
    </ul>
  }



</div>